{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "groupName": "Actions",
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "automerge": true,
      "addLabels": ["Release: Patch", "Skip: Announcements"]
    },
    {
      "groupName": "Actions",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["Release: Patch", "Skip: Announcements"]
    }
  ]
}
